<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- 1. Welcome File List -->
    <welcome-file-list>
        <!-- Default page to load when accessing the root URL -->
        <welcome-file>/WEB-INF/jsp/home.jsp</welcome-file>
    </welcome-file-list>

    <!-- 2. Servlet Configuration -->

    <!-- UserServlet for handling user-related operations -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.blogapp.controller.UserServlet</servlet-class>
    </servlet>

    <!-- PostServlet for handling blog post operations -->
    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>com.blogapp.controller.PostServlet</servlet-class>
    </servlet>

    <!-- CommentServlet for handling comment operations -->
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>com.blogapp.controller.CommentServlet</servlet-class>
    </servlet>

    <!-- AdminServlet for handling administrative actions -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.blogapp.controller.AdminServlet</servlet-class>
    </servlet>

    <!-- 3. Servlet Mappings -->

    <!-- Mapping URLs to the UserServlet -->
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <!-- Mapping URLs to the PostServlet -->
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/posts/*</url-pattern>
    </servlet-mapping>

    <!-- Mapping URLs to the CommentServlet -->
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/comments/*</url-pattern>
    </servlet-mapping>

    <!-- Mapping URLs to the AdminServlet -->
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>

    <!-- 4. Error Page Configurations -->

    <!-- Custom error page for 404 errors (Page Not Found) -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/404.jsp</location>
    </error-page>

    <!-- Custom error page for 500 errors (Internal Server Error) -->
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error/500.jsp</location>
    </error-page>

    <!-- 5. Security Constraints -->

    <!-- Restrict access to the admin section -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Define security roles -->
    <security-role>
        <role-name>USER</role-name>
    </security-role>
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>

    <!-- 6. Context Parameters (Optional) -->

    <!-- Example context parameter for application settings -->
    <context-param>
        <param-name>appName</param-name>
        <param-value>Blog Web App</param-value>
    </context-param>

    <!-- 7. Session Configuration -->

    <!-- Set session timeout to 30 minutes -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>


